<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="UX4GTheme">
        <attr name="colorPrimary" format="color" />
        <attr name="colorOnPrimary" format="color" />
        <attr name="colorSecondary" format="color" />
        <attr name="colorOnSecondary" format="color" />
        <attr name="colorBackground" format="color" />
        <attr name="colorTextPrimary" format="color" />
        <attr name="colorTextSecondary" format="color" />

        <attr name="colorSurface" format="color"/>
        <attr name="colorOnSurface" format="color"/>

        <attr name="fontFamily" format="string"/>
<!--        <attr name="fontFamily" format="reference"/>-->
<!---->
    </declare-styleable>


    <declare-styleable name="CustomButton">
        <attr name="buttonType" format="enum">
            <enum name="primary" value="0" />
            <enum name="secondary" value="1" />
            <enum name="outline" value="2" />
        </attr>
        <attr name="cornerRadius" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="ButtonView">
        <attr name="text" format="string"/>
        <attr name="buttonTextSize" format="dimension"/>
        <attr name="textColor" format="color"/>
        <attr name="buttonTextColor" format="color"/>
        <attr name="buttonBackgroundColor" format="color"/>
        <attr name="isRoundCorners" format="boolean"/>
    </declare-styleable>

</resources>