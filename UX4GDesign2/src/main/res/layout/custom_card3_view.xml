<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="0dp"
    app:cardElevation="-10dp"
    android:padding="14dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_starts4"
            android:paddingStart="8dp"
            android:visibility="visible"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivImage"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/test_image"
            android:paddingStart="8dp"
            android:visibility="visible"/>


        <!-- Text Content -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:orientation="vertical"
            android:paddingStart="10dp"
            android:layout_marginVertical="8dp">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="List Item"
                android:textSize="14sp"
                android:textStyle="bold"
                android:maxLines="1"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/supportingText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Supporting text"
                android:textSize="11sp"
                android:layout_marginTop="2dp"
                android:maxLines="3"
                android:textColor="@android:color/darker_gray"/>
        </LinearLayout>

        <!-- CheckBox -->
        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/checkBoxRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible"/>

        <!-- Arrow Icon -->
        <ImageView
            android:id="@+id/arrowIconRight"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_right"
            android:visibility="gone"
            android:layout_marginStart="8dp"/>

        <androidx.appcompat.widget.AppCompatRadioButton
            android:id="@+id/radioButtonRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible"/>

        <!-- Toggle Switch -->
        <com.example.ux4gdesign2.components.switchButtons.CustomSwitchButton
            android:id="@+id/toggleSwitchRight"
            android:layout_width="30dp"
            android:layout_height="15dp"
            android:checked="false"
            android:visibility="gone"
            android:layout_marginEnd="6dp"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>
