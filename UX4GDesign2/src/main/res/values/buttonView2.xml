<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="UX4GTheme.roundFillButton" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/bg_filled_rounded_button</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/text_size_12</item>
<!--        <item name="android:textAlignment">center</item>-->
<!--        <item name="android:fontFamily">@font/poppins_regular</item>-->
        <item name="android:gravity">center</item>
        <!-- Custom padding values for each side -->

        <item name="android:paddingLeft">@dimen/padding_8</item>
        <item name="android:paddingRight">@dimen/padding_8</item>

        <!-- Use insetPadding to simulate margins -->
        <!--<item name="android:insetLeft">@dimen/margin_2</item>
        <item name="android:insetRight">@dimen/margin_2</item>
        <item name="android:insetTop">@dimen/margin_8</item>
        <item name="android:insetBottom">@dimen/margin_2</item>-->

        <item name="android:layout_marginLeft">@dimen/margin_2</item>
        <item name="android:layout_marginRight">@dimen/margin_2</item>
        <item name="android:layout_marginTop">@dimen/margin_2</item>
        <item name="android:layout_marginBottom">@dimen/margin_2</item>
    </style>


    <style name="UX4GTheme.outlineRoundButton" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/bg_outline_rounded_button</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textSize">@dimen/text_size_12</item>
        <item name="android:gravity">center</item>
        <!-- Custom padding values for each side -->
        <item name="android:paddingTop">@dimen/padding_2</item>
        <item name="android:paddingBottom">@dimen/padding_2</item>
        <item name="android:paddingLeft">@dimen/padding_6</item>
        <item name="android:paddingRight">@dimen/padding_6</item>

        <item name="android:layout_marginLeft">@dimen/margin_2</item>
        <item name="android:layout_marginRight">@dimen/margin_2</item>
        <item name="android:layout_marginTop">@dimen/margin_2</item>
        <item name="android:layout_marginBottom">@dimen/margin_2</item>
    </style>


    <style name="UX4GTheme.outlineButton" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/bg_outline_button</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textSize">@dimen/text_size_12</item>
        <item name="android:gravity">center</item>
        <!-- Custom padding values for each side -->
        <item name="android:paddingTop">@dimen/padding_2</item>
        <item name="android:paddingBottom">@dimen/padding_2</item>
        <item name="android:paddingLeft">@dimen/padding_6</item>
        <item name="android:paddingRight">@dimen/padding_6</item>

        <item name="android:layout_marginLeft">@dimen/margin_2</item>
        <item name="android:layout_marginRight">@dimen/margin_2</item>
        <item name="android:layout_marginTop">@dimen/margin_2</item>
        <item name="android:layout_marginBottom">@dimen/margin_2</item>
    </style>


    <style name="UX4GTheme.CustomEditText" parent="android:Widget.EditText">
        <item name="android:background">@drawable/bg_edittext</item>
        <item name="android:padding">12dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/UX4G_neutral_300</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/notosans_medium</item>
    </style>

    <!-- ImageView Styles -->
    <style name="UX4GTheme.RoundImageView" parent="Widget.AppCompat.ImageButton">
        <item name="android:scaleType">centerCrop</item>
        <item name="android:background">@drawable/bg_round_image</item>
<!--        <item name="android:clipToOutline">true</item>-->
        <item name="android:outlineProvider">background</item>
    </style>



    <!--<style name="UX4GTheme.imageview.RectangleImageView">
        <item name="android:scaleType">centerCrop</item>
        <item name="android:background">@drawable/bg_rectangle_image</item>
    </style>-->

    <!-- CheckBox and RadioButton Modern Styles -->
    <style name="UX4GTheme.CustomCheckBox" parent="android:Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/bg_cusotm_checkbox</item>
    </style>

    <style name="UX4GTheme.CustomRadioButton" parent="android:Widget.CompoundButton.RadioButton">
        <item name="android:button">@drawable/bg_custom_radiobutton</item>
    </style>

    <!-- Chips Style -->
    <style name="UX4GTheme.CustomChip" parent="Widget.MaterialComponents.ChipGroup">
        <item name="android:background">@drawable/bg_chip</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <!-- Toggle Button Styles -->
    <style name="UX4GTheme.CustomToggleButton1" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="android:thumbTint">?attr/colorPrimary</item>
        <item name="android:trackTint">?attr/colorSecondary</item>
    </style>

    <style name="UX4GTheme.CustomToggleButton2" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="android:thumbTint">?attr/colorPrimary</item>
        <item name="android:trackTint">?attr/colorSecondary</item>
        <item name="android:background">@drawable/bg_toggle_button_1</item>
    </style>

    <style name="UX4GTheme.ToggleButton1" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="android:background">@drawable/toggle_button_background</item>
        <item name="android:foreground">@drawable/toggle_button_ripple</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:padding">8dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="UX4GTheme.CustomToggleButton3" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <!--<item name="android:thumbTint">?attr/colorPrimary</item>
        <item name="android:trackTint">?attr/colorSecondary</item>-->
        <item name="android:background">@drawable/bg_toggle_thumb</item>
    </style>


    <style name="UX4GTheme.CustomCard" parent="Widget.MaterialComponents.CardView">
        <item name="android:background">@drawable/bg_custom_card</item>
    </style>


    <style name="UX4GTheme.style.switch1" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="android:track">@drawable/bg_switch_background_track</item>
        <item name="android:thumb">@drawable/bg_switch_2</item>
    </style>


    <declare-styleable name="CustomRangeView">
        <!-- Minimum value of the slider -->
        <attr name="valueFrom" format="float"/>

        <!-- Maximum value of the slider -->
        <attr name="valueTo" format="float"/>

        <!-- Step size for increments -->
        <attr name="stepSize" format="float"/>

        <!-- Default selected value -->
        <attr name="defaultValue" format="float"/>
    </declare-styleable>


</resources>