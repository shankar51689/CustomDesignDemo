<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Border Layer -->
    <item>
        <shape android:shape="oval">
            <solid android:color="@android:color/transparent"/>
            <stroke android:width="2dp" android:color="@color/grayFill"/> <!-- Customize border -->
        </shape>
    </item>

    <!-- Image Mask (Ensures Image is Circular) -->
    <item android:left="2dp" android:top="2dp" android:right="2dp" android:bottom="2dp">
        <shape android:shape="oval">
            <solid android:color="@android:color/white"/> <!-- Acts as a mask -->
        </shape>
    </item>

</layer-list>

