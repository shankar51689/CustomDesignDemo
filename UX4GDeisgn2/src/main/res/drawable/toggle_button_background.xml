<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Toggle ON State -->
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/UX4G_success"/> <!-- Background for ON -->
            <stroke android:width="2dp" android:color="@color/UX4G_neutral_600"/>
            <corners android:radius="20dp"/>
        </shape>
    </item>

    <!-- Toggle OFF State -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/UX4G_neutral_700"/> <!-- Background for OFF -->
            <stroke android:width="2dp" android:color="@color/UX4G_neutral_500"/>
            <corners android:radius="20dp"/>
        </shape>
    </item>
</selector>
