<?xml version="1.0" encoding="utf-8"?>

<ripple xmlns:android="http://schemas.android.com/apk/res/android"
android:color="@color/rippleEffectColor">

    <!-- This is the button's default appearance -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <stroke android:color="?attr/colorPrimary" android:width="@dimen/stroke_width_1dp"/>
            <corners android:radius="@dimen/medium_round_corner"/>
        </shape>
    </item>

    <!-- This defines the area where the ripple will be applied -->
    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent"/> <!-- Invisible but allows ripple -->
            <corners android:radius="@dimen/medium_round_corner"/>
        </shape>
    </item>
</ripple>