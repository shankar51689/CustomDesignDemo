<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="10dp"
        tools:context=".ui.activitys.RangeSlidersActivity">

        <com.example.ux4gdesign2.components.rangeBar.CustomRangeBar
            android:id="@+id/customRange"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:valueFrom="0"
            app:valueTo="100"
            app:stepSize="1"
            app:defaultValue="50"
            style="@style/CustomSliderStyle"/>


        <com.example.ux4gdesign2.components.rangeBar.CustomRangeSlider
            android:id="@+id/rangeSilder2"
            android:layout_width="match_parent"
            android:layout_height="85dp"
            app:thumbSize="8dp"
            app:thumbBorderColor="@color/purple_500"
            app:thumbFillColor="@color/white"
            app:rs_trackColor="@color/purple_500"
            app:labelColor="@color/black"
            app:showLabels="true"
            app:labelSuffix="%"
            android:paddingHorizontal="20dp"
            />

    </androidx.appcompat.widget.LinearLayoutCompat>
</layout>